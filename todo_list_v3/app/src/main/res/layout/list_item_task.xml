<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <CheckBox
        android:id="@+id/checkBoxCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/textViewTaskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/checkBoxCompleted"
        android:layout_alignParentStart="false"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:paddingBottom="10dp"
        android:text="Task Title"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textViewTaskDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTaskTitle"
        android:layout_toEndOf="@id/checkBoxCompleted"
        android:layout_alignParentStart="false"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:text="Task Description"
        android:textSize="14sp"
        android:textColor="#808080" />
    <TextView
        android:id="@+id/textViewTaskTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTaskDescription"
        android:layout_toEndOf="@id/checkBoxCompleted"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:text="Timestamp"
        android:textSize="12sp"
        android:textColor="#808080" />


    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="80dp"
        android:text="Edit"
        android:textSize="12sp"
        android:padding="0dp"
        android:background="@drawable/button_background" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="Delete"
        android:textSize="12sp"
        android:padding="0dp"
        android:background="@drawable/button_background" />
</RelativeLayout>
